{
    "name": "envey",
    "version": "2.5.0",
    "description": "Type-safe configuration schemas for Node.js",
    "keywords": [
        "configuration",
        "config",
        "schema",
        "validation",
        "zod",
        "env",
        "environment",
        "node",
        "nodejs"
    ],
    "homepage": "https://github.com/samialdury/envey#readme",
    "bugs": {
        "url": "https://github.com/samialdury/envey/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samialdury/envey.git"
    },
    "license": "MIT",
    "author": "Sami Al-Dury",
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./package.json": "./package.json"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "./dist",
        "./src"
    ],
    "scripts": {
        "build": "tsup",
        "build:ci": "pnpm run build",
        "format": "prettier --write .",
        "format:ci": "prettier --check .",
        "lint:ci": "publint && attw --pack .",
        "publish": "tsup",
        "release": "semantic-release",
        "test": "vitest run",
        "test:ci": "pnpm run test",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest watch",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "0.13.10",
        "@sebbo2002/semantic-release-jsr": "2.0.4",
        "@semantic-release/changelog": "6.0.3",
        "@semantic-release/git": "10.0.1",
        "@trivago/prettier-plugin-sort-imports": "5.2.2",
        "@types/node": "20.14.7",
        "@vitest/coverage-v8": "3.0.7",
        "prettier": "3.5.3",
        "prettier-plugin-packagejson": "2.5.10",
        "publint": "0.2.8",
        "semantic-release": "22.0.12",
        "tsup": "8.0.2",
        "typescript": "5.7.3",
        "vitest": "3.0.7",
        "zod": "3.24.1"
    },
    "peerDependencies": {
        "zod": "^3.0.0"
    },
    "packageManager": "pnpm@10.2.1+sha512.398035c7bd696d0ba0b10a688ed558285329d27ea994804a52bad9167d8e3a72bcb993f9699585d3ca25779ac64949ef422757a6c31102c12ab932e5cbe5cc92",
    "engines": {
        "node": ">=20"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    }
}
